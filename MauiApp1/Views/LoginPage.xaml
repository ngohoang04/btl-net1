<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MauiApp1.ViewModels"
             x:Class="MauiApp1.Views.LoginPage"
             Title="Đăng Nhập"
             BackgroundColor="#f0f2f5">

    <ScrollView>
        <VerticalStackLayout Spacing="15" 
                             Padding="30" 
                             VerticalOptions="Center">

            <Image Source="dotnet_bot.png"
                   HeightRequest="120"
                   HorizontalOptions="Center" />

            <Label Text="Chào mừng trở lại!"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#333"
                   Margin="0,0,0,10"/>

            <Entry Placeholder="Nhập Email"
                   Text="{Binding Email}"
                   Keyboard="Email"
                   BackgroundColor="White"
                   TextColor="Black"
                   HeightRequest="50" />

            <Entry Placeholder="Nhập Mật khẩu"
                   Text="{Binding Password}"
                   IsPassword="True"
                   BackgroundColor="White"
                   TextColor="Black"
                   HeightRequest="50" />

            <Label Text="Quên mật khẩu?" 
                   TextColor="#1877F2" 
                   FontSize="14"
                   HorizontalOptions="End">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding ForgotPasswordCommand}" />
                </Label.GestureRecognizers>
            </Label>

            <ActivityIndicator IsRunning="{Binding IsLoading}"
                               IsVisible="{Binding IsLoading}"
                               Color="#1877F2" />

            <Button Text="ĐĂNG NHẬP"
                    Command="{Binding LoginCommand}"
                    BackgroundColor="#1877F2"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="25"
                    HeightRequest="55"
                    Margin="0,10,0,0">
                <Button.Shadow>
                    <Shadow Brush="Black" Offset="0,4" Opacity="0.2" Radius="5"/>
                </Button.Shadow>
            </Button>

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="5" Margin="0,20,0,0">
                <Label Text="Chưa có tài khoản?" 
                       TextColor="Gray" 
                       VerticalOptions="Center"/>

                <Label Text="Đăng ký ngay" 
                       TextColor="#1877F2" 
                       FontAttributes="Bold"
                       VerticalOptions="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GoToRegisterCommand}" />
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>