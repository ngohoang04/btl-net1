<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MauiApp1.ViewModels"
             x:Class="MauiApp1.Views.ProfilePage"
             Title="Cá Nhân"
             BackgroundColor="#f0f2f5">

    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="20">

            <Frame HeightRequest="120" WidthRequest="120" 
                   CornerRadius="60" HorizontalOptions="Center" 
                   IsClippedToBounds="True" Padding="0" BorderColor="White">
                <Image Source="{Binding AvatarSource}" Aspect="AspectFill">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding PickImageCommand}"/>
                    </Image.GestureRecognizers>
                </Image>
            </Frame>
            <Label Text="Chạm vào ảnh để thay đổi" FontSize="12" TextColor="Gray" HorizontalOptions="Center"/>

            <Border StrokeShape="RoundRectangle 10" 
                    StrokeThickness="0" 
                    BackgroundColor="White" 
                    Padding="15">

                <VerticalStackLayout Spacing="10">
                    <Label Text="Họ và tên" TextColor="Gray" FontSize="12"/>
                    <Entry Text="{Binding FullName, Mode=TwoWay}" Placeholder="Nhập họ tên của bạn"/>

                    <Label Text="Ngày sinh" TextColor="Gray" FontSize="12"/>
                    <DatePicker Date="{Binding DateOfBirth, Mode=TwoWay}" Format="dd/MM/yyyy"/>

                    <Label Text="Múi giờ" TextColor="Gray" FontSize="12"/>

                    
                </VerticalStackLayout>
            </Border>

            <Grid>
                <Button Text="Lưu Thông Tin" 
                        Command="{Binding SaveProfileCommand}"
                        BackgroundColor="#1877F2" FontAttributes="Bold" CornerRadius="10"/>

                <ActivityIndicator IsRunning="{Binding IsBusy}" 
                                   IsVisible="{Binding IsBusy}"
                                   Color="White"
                                   HorizontalOptions="Center" VerticalOptions="Center"/>
            </Grid>

            <Button Text="Đổi Mật Khẩu" Command="{Binding ChangePasswordCommand}" 
                    BackgroundColor="Orange" TextColor="White" CornerRadius="10"/>

            <Button Text="Đăng Xuất" Command="{Binding LogoutCommand}" 
                    BackgroundColor="#ff4d4d" TextColor="White" CornerRadius="10"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>