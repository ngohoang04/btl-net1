<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MauiApp1.ViewModels"
             x:Class="MauiApp1.Views.RegisterPage"
             Title="Đăng Ký"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30" VerticalOptions="Center">

            <Label Text="Tạo Tài Khoản Mới" 
                   FontSize="24" FontAttributes="Bold" 
                   TextColor="#1877F2" HorizontalOptions="Center" />

            <Entry Placeholder="Email" Text="{Binding Email}" 
                   Keyboard="Email" HeightRequest="50" BackgroundColor="#f0f2f5" TextColor="Black"/>

            <Entry Placeholder="Mật khẩu" Text="{Binding Password}" 
                   IsPassword="True" HeightRequest="50" BackgroundColor="#f0f2f5" TextColor="Black"/>

            <Entry Placeholder="Xác nhận mật khẩu" Text="{Binding ConfirmPassword}" 
                   IsPassword="True" HeightRequest="50" BackgroundColor="#f0f2f5" TextColor="Black"/>

            <ActivityIndicator IsRunning="{Binding IsLoading}" 
                               IsVisible="{Binding IsLoading}" Color="#1877F2"/>

            <Button Text="ĐĂNG KÝ NGAY" Command="{Binding RegisterCommand}"
                    BackgroundColor="#1877F2" FontAttributes="Bold" CornerRadius="10" HeightRequest="50"/>

            <Label Text="Quay lại Đăng nhập" TextColor="Gray" HorizontalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding GoBackCommand}"/>
                </Label.GestureRecognizers>
            </Label>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>